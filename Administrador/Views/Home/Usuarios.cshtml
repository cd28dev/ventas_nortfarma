
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Usuarios
    </div>
    <div class="card-body" style="display: flex; flex-direction: column; height: 400px; padding: 0;">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success mb-1 mt-2 ms-2" id="nuevoBtn">
                    Nuevo
                </button>
            </div>
        </div>

        <hr />

        <div id="myGrid" class="ag-theme-alpine" style="flex-grow: 1; width: 100%; height: 100%;"></div>
    </div>
</div>

@Html.Partial("_ModalNuevo")
@Html.Partial("_ModalEliminacion")
@Html.Partial("_ModalConfirmacion")

@section scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ag-grid-community/styles/ag-grid.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ag-grid-community/styles/ag-theme-alpine.css" />
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community@28.1.0/dist/ag-grid-community.min.noStyle.js"></script>

    <script type="module" src="~/Js/grid.js"></script>
    <script type="module" src="~/Js/modal.js"></script>
}

