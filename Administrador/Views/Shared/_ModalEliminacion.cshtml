<!-- Modal de Confirmación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <!-- Más compacto -->
        <div class="modal-content text-center border-0 shadow-lg">
            <div class="modal-header bg-danger text-white py-2">
                <h6 class="modal-title" id="confirmDeleteLabel">Confirmar Eliminación</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <i class="fas fa-exclamation-triangle text-danger mb-2" style="font-size: 40px;"></i>
                <p class="mb-1">¿Estás seguro de que deseas eliminar este elemento?</p>
                <small class="text-muted">Esta acción no se puede deshacer.</small>
            </div>
            <div class="modal-footer p-1 border-0 d-flex justify-content-center gap-1">
                <button type="button" class="btn btn-secondary btn-xs flex-fill" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger btn-xs flex-fill" id="btnConfirmDelete">Eliminar</button>
            </div>

        </div>
    </div>
</div>
